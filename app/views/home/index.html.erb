<script type="text/javascript">
  ShopifyApp.ready(function(){
    ShopifyApp.Bar.initialize({
      title: "Home",
      icon: "<%= asset_path('faveicon.png') %>"
    });
  });
</script>
<head>
  <link href="/app/assets/stylesheets/application.css" rel="stylesheet" />
</head>
  <body>
<!-- Navigation tabs -->
<div class="navbar navbar-inverse">
      <div class="navbar-inner">
        <div class="container">

<!-- All -->
<ul class="nav nav-tabs" role="tablist">
  <li role="presentation" class="active">
    <a href"#all" area-controls="all" role="tab" data-toggle="tab">
     <h4> All </h4>
    </a>
  </li>
<!-- Orders -->
  <li role="presentation">
    <a href"#orders" area-controls="orders" role="tab" data-toggle="tab">
      <h4> Orders </h4>  
    </a>
  </li>

  <!-- Products -->
<li role="presentation">
    <a href"#products" area-controls="products" role="tab" data-toggle="tab">
      <h4> Products </h4>
    </a>
  </li>

</ul>
    </div>
      </div>
        </div>

    <div class="tab-content">

      <div role="tabpanel" class="tab-pane fade in active" id="all">
    <div id="all-events">

    <h1>Shopivents</h1>
          <% @events.each do |event| %>
        <li class="list-group-item">
          <p>
           <%= event.author %>
           <%= change_url(event.message).html_safe %>
          </p>
          <p>
           <%= time_ago_in_words(event.created_at) %> ago
          </p>
        </li>
    <% end %>
    </div>

    <div class="tab-content">

      <div role="tabpanel" class="tab-pane fade in active" id="orders">
    <div id="orders-events">

    <h1>Shopivent Orders</h1>
          <% @orders.each do |order| %>
        <li class="list-group-item">
          <p>
           <%= order.author %>
           <%= change_url(order.message).html_safe %>
          </p>
          <p>
           <%= time_ago_in_words(order.created_at) %> ago
          </p>
        </li>
    <% end %>
    </div>

  </body>


